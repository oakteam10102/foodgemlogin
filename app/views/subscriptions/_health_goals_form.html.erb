<section id="portfolio" class="bg-light-gray healthgoals" style="padding: 50px 0 0 0; display: none;">  
    <div class="container">           
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Health Goals</h2>
                <h3 class="section-subheading text-muted" style="margin: 5px 0 10px 0;"> Do you have any health goals? </h3>
                <h3 class="section-subheading text-muted" style="margin: 5px 0 30px 0;"> <span class="navpreferences gopreferences"><a href='#'> Back to main tracks </a></span> </h3>
            </div>
        </div>


        <div class='col-md-8 col-md-offset-2'>
            <div class="row">
                <% if @health_goals %>
                    <%= collection_check_boxes(:customer, :health_goal_ids, @health_goals, :id, :name) do |b| %>
                        <div class="col-md-4">
                        <%= b.label(class: "check_box") do %>
                          
                            <%= b.check_box :checked => (@customer_health_goal_ids && @customer_health_goal_ids.include?(b.object.id)) ? 'checked' : '' %>
                            <%= b.object.name %>
                                 
                        <% end %>
                        </div>
                    <% end %>
                <% end %>
            </div>

            <div class="row"><br>
                <%= f.label :age %>
                <%= f.text_field :age, class: 'form-control' %>
                <%= f.label :height %>
                <%= f.text_field :height, class: 'form-control' %>
                <%= f.label :weight %>
                <%= f.text_field :weight, class: 'form-control' %>
                <%= f.label :caloric_target %>
                <%= f.text_field :caloric_target, class: 'form-control' %>

            </div>

            <div class="row text-center" style="padding: 10px 0px 20px;">
                <div class="col-md-3 text-center">
                </div>
                <div class="col-md-6 text-center">
                    <%= button_tag "Next", {class: 'btn btn-primary', id: 'btn-healthgoal', type: 'button'} %>
                    <%#= link_to 'Cancel', root_url, {class: 'btn btn-primary'} %>
                </div>
                <div class="col-md-3 text-center">
                </div>
            </div>           
        </div>
    </div>         
</section>