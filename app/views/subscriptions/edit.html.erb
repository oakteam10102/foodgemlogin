        $('.day').hide();
        $(".navday").css('color', '#777');
    }

    function hideGoFollowFriend(){
        $('.followfriend').hide();
        $(".navfollowfriend").css('color', '#777');
    }

    function hideGoHealthGoal(){
        $('.healthgoals').hide();
        $(".navhealthgoals").css('color', '#777');
    }
</script>