<section id="portfolio" class="bg-light-gray preferences" style="padding: 50px 0 0 0;">
  <div class="container">           
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Choose Preferences</h2>
                <h3 class="section-subheading text-muted" style="margin: 5px 0 30px 0;"> Select one of our classic tracks or choose to <span class="navfollowfriend gofollowfriend"><a href='#'> follow a friend </a></span> or choose a <span class="navhealthgoals gohealthgoals"><a href='#'> health goal </a></span> </h3>                
            </div>
        </div>

        <div class="row">
            <% @main_tracks.each do |track| %> 
          <div class="gohealthgoals col-md-4 col-sm-6 portfolio-item" style="height: 354px;">
                <a class="portfolio-link selecttrack" data-toggle="modal" onclick="select_track(<%= track.id %>);">
                    <div class="portfolio-hover <%= 'portfolio-darkorange-hover' if @preferences.where(track: track).any? %>" id="portfolio_<%= track.id %>">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img src="<%= track.image %>" class="img-responsive" alt="">
                    <input type="hidden" id="track_<%= track.id %>" name="track[]" value="<%= track %>" class="<%= 'select-track-name' if @preferences.where(track: track).any? %>"/>
                </a>
                <div class="portfolio-caption">
                    <h4><%= " #{track} " %></h4>
                    <p class="text-muted"><%= track.description %></p><a href="<%= ratings_subscriptions_path %>" class="starmargin" style="display: block;font-family: FontAwesome; margin:0 auto; text-decoration: none;"><i class="fa fa-star starclr"></i><i class="fa fa-star starclr"></i><i class="fa fa-star starclr"></i><i class="fa fa-star starclr"></i><i class="fa fa-star-half-full starclr"></i> [182 <i class="fa fa-group"></i>]<br></a>
                </div>
              </div>
      <% end %>
        </div> 
  </div>         
</section>