<div class="col-md-6 col-md-offset-3">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :role => 'form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="actions form-group"><br>
      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-default' %>
    </div>
  <% end %>

  <%= render "customers/shared/links" %>
</div>
