<h3> All customers </h3>

<% if @customers.empty? %>
  <p>No data for <%= @query %></p>
<% else %>
  <%= paginate @customers %> 
  <div class="row">
    <div class="col-sm-4">
      Email
    </div>
    <div class="col-sm-4">
      Name
    </div>
    <div class="col-sm-2">
      Payment Status
    </div>
    <div class="col-sm-2">
      Action
    </div>
  </div>
  <br>
  <% @customers.each do |customer| %>
    <div class="row">
      <div class="col-sm-4">    <%= "#{customer}  " %> </div>
      <div class="col-sm-4">    <%= "#{customer.address.full_name}  " %> </div>
      <div class="col-sm-2">     
        <%=  customer.subscription.payment_status %>
      </div>
      <div class="col-sm-2">
        <%= link_to 'View', management_customer_path(customer) %>
      </div>
    </div>
    <br>
  <% end %>
  <%= paginate @customers %> 
<% end %>
